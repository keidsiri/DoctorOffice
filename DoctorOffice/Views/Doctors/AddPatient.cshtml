@{
  Layout = "_Layout";
}

@model DoctorOffice.Models.Doctor

<h2>Add a patient</h2>

<h4>Add a patient to this doctor: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.DoctorId)

  @Html.Label("Select patient")
  @Html.DropDownList("PatientId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list of doctors", "Index")</p>